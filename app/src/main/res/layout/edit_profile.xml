<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/purple"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:tint="@color/grey"
            app:srcCompat="@drawable/ic_photo_camera_black_24dp" />
    </LinearLayout>

<!--    <ImageView-->
<!--        android:id="@+id/imageView3"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:srcCompat="@drawable/ic_photo_camera_black_24dp"-->
<!--        app:layout_constraintTop_toTopOf="@id/main_profile_image"-->
<!--        app:layout_constraintLeft_toLeftOf="parent"-->
<!--        app:layout_constraintRight_toRightOf="parent"/>-->

    <ImageView
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_edit_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="10dp"
        android:tint="@color/grey"/>

<!--    <FrameLayout-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content">-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/edit_profile_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/profile_placeholder"
        app:civ_border_color="#fff"
        app:civ_border_width="2dp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/line0"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="25dp"
        android:background="#808080"
        app:layout_constraintTop_toBottomOf="@id/edit_profile_image"/>

    <TextView
        android:id="@+id/edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textStyle="bold"
        android:text="Name"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="18dp"
        app:layout_constraintTop_toBottomOf="@id/line0"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/ipt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="12dp"
        android:inputType="textPersonName"
        android:text="Add your name"
        android:textSize="14sp"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toRightOf="@id/edit_name"
        app:layout_constraintTop_toBottomOf="@id/line0"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="12dp"
        android:background="#808080"
        app:layout_constraintTop_toBottomOf="@id/ipt_name"/>

    <TextView
        android:id="@+id/edit_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bio"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1"/>

    <EditText
        android:id="@+id/ipt_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="12dp"
        android:inputType="textPersonName"
        android:text="Add a bio to your profile"
        android:textSize="14sp"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toRightOf="@id/edit_bio"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1"/>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="50dp"
        android:background="#808080"
        app:layout_constraintTop_toBottomOf="@id/ipt_bio"/>

    <TextView
        android:id="@+id/txt_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="18dp"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line2"/>

    <EditText
        android:id="@+id/ipt_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Add your location"
        android:textSize="14sp"
        android:layout_marginTop="12dp"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toRightOf="@id/txt_location"
        app:layout_constraintTop_toBottomOf="@id/line2"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="12dp"
        android:background="#808080"
        app:layout_constraintTop_toBottomOf="@id/ipt_location"/>

</androidx.constraintlayout.widget.ConstraintLayout>